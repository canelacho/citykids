<div class="row" > <!-- GALERIA --> 

    <div id="frameInfoPicture" class="col s12 m6 l4" ng-repeat="gallery in pictures | filter: findByTag | orderBy:gallery.date | limitTo:quantity track by $index">	

    	<div id="imagen">
